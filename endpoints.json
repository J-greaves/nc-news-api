{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "retrieves a specific article by its ID",
    "params": ["article_id"],
    "exampleResponse": {
      "article": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 1,
          "body": "Text from the article..",
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://example.com/image.jpg"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates a specific articles votes by its ID (plus 10 here)",
    "params": ["article_id", "inc_votes"],
    "exampleResponse": {
      "article": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 1,
          "body": "Text from the article..",
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 10,
          "article_img_url": "https://example.com/image.jpg"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "retrieves specific comments by their article_id",
    "params": ["article_id"],
    "exampleResponse": {
      "comment": [
        {
          "body": "git push origin master",
          "votes": 0,
          "author": "icellusedkars",
          "article_id": 3,
          "created_at": 1592641440000
        },
        {
          "body": "Ambidextrous marsupial",
          "votes": 0,
          "author": "icellusedkars",
          "article_id": 3,
          "created_at": 1600560600000
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Posts a comment by an article_id",
    "params": ["username", "body"],
    "exampleResponse": {
      "comment": {
        "comment_id": 19,
        "body": "this is a comment by icellusedkars",
        "article_id": 4,
        "author": "icellusedkars",
        "votes": 0,
        "created_at": "2024-08-28T13:38:43.814Z"
      }
    }
  }
}
